<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="davidkatanik.vsb.cz.castlewarsActivities.SettingsActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#3dc35755"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="270dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:text="Hudba"
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/tvHudbaSet"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal" />

            <SeekBar
                android:id="@+id/sbMusicSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="10"
                android:progress="5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:text="Zvuky"
                android:layout_row="2"
                android:layout_column="0"
                android:id="@+id/tvZvukySet"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal" />

            <SeekBar
                android:id="@+id/sbSoundSet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="10"
                android:progress="5" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:text="Vibrace"
                android:id="@+id/swVibrationsSet"
                android:layout_gravity="center_horizontal"
                android:checked="true" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
