<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenuActivity"
    android:background="@drawable/bg"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:minWidth="200dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/new_game"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            android:id="@+id/btnMultiplayer"
            android:onClick="onClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_below="@+id/btnPlay"
            android:layout_alignStart="@+id/btnPlay"
            android:layout_centerInParent="true"
            android:id="@+id/btnSettings"
            android:onClick="onClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            android:layout_below="@+id/btnNetPlay"
            android:layout_centerInParent="true"
            android:id="@+id/btnStatistics"
            android:onClick="onClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:layout_below="@+id/btnStats"
            android:layout_alignStart="@+id/btnStats"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:id="@+id/btnAbout"
            android:onClick="onClick" />
    </LinearLayout>

</RelativeLayout>
